{
  "manifest_version": 3,
  "name": "XPath & ID Generator",
  "version": "1.0",
  "description": "Generate XPath expressions and element IDs using AI or local generation - Click on elements to get their XPath or ID",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
